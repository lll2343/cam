view {
  box-sizing: border-box;
}

.my-hearder {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  display: flex;
  background-color: #58aafe;
}

.my-search {
  width: 85%;
}

.my-pic {
  width: 15%;
}

.my-pic view {
  width: 70rpx;
  height: 70rpx;
  border: 1rpx solid #ccc;
  border-radius: 35rpx;
  margin-left: 8rpx;
  margin-top: 19rpx;
}

.my-pic-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.show-pic {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 50rpx;
  width: 100%;
  height: 250rpx;
}

.detail-pic {
  width: 100%;
  height: 100%;
  text-align: center;
}

.body {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 450rpx;
  border: 1rpx solid #ccc;
  border-radius: 80rpx;
  margin: 0 auto;
  margin-top: 45rpx;
  background-image: linear-gradient(to bottom right,rgb(121, 177, 233), rgb(203, 221, 233));
}

.camera {
  width: 360rpx;
  height: 360rpx;
  border: 1rpx solid #ccc;
  border-radius: 180rpx;
}

.camera image {
  width: 70%;
  height: 70%;
  margin-left: 63rpx;
  margin-top: 42rpx;
}

.recomand {
  width: 100%;
  height: 1500rpx;
}

.main-recomand {
  margin-top: 20rpx;
}