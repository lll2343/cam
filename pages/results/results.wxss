/* pages/results/results.wxss */
.empty-pic {
    display: block;
    width: 500rpx;
    height: 500rpx;
    margin: 0 auto;
    margin-top: 200rpx;
}

.detail {
    text-align: center;
    color: #888;
}

.back {
    color: #999;
    text-align: center;
    text-decoration: underline;
    margin-top: 20rpx;
}

.success {
    margin-top: 30rpx;
}

.get-item-list {
    display: flex;
    justify-content: space-between;
    height: 160rpx;
    width: 100%;
    margin-bottom: 15rpx;
    border-bottom: 1rpx solid #ccc;
}

.left-pic {
    width: 25%;
    border-right: 1rpx solid #ccc;
}

.right-detail {
    width: 60%;
    margin-right: 10%;
} 

.right-detail-title {
    font-size: 40rpx;
    color: #444;
    margin-bottom: 5rpx;
}

.right-detail-des {
    color:#888;
}